<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Uploadearn.uploadnearn">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#CAF8D0"
        android:layout_height="130dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/calendar">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:text="Start Date : September 30 ,2020"
                android:fontFamily="serif"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/calendar">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="End Date : September 30 ,2020"
                android:fontFamily="serif"></TextView>
        </LinearLayout>



    </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"

        android:layout_height="80dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Rank 1"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginLeft="30dp"
                >

            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="30dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Cash Prize"
                    android:textColor="#B5AFAF"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:layout_marginLeft="30dp"
                    >

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="₹ 5000"
                    android:gravity="end"
                    android:layout_marginEnd="10dp"
                    android:textColor="#000000"
                    android:fontFamily="serif"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp">

                </TextView>





            </RelativeLayout>





        </LinearLayout>




    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"

        android:layout_height="80dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Rank 1"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginLeft="30dp"
                >

            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="30dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Cash Prize"
                    android:textColor="#B5AFAF"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:layout_marginLeft="30dp"
                    >

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="₹ 3000"
                    android:layout_marginEnd="10dp"
                    android:gravity="end"
                    android:textColor="#000000"
                    android:fontFamily="serif"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp">
                </TextView>
            </RelativeLayout>





        </LinearLayout>




    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"

        android:layout_height="80dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Rank 1"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginLeft="30dp"
                >

            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="30dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Cash Prize"
                    android:textColor="#B5AFAF"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:layout_marginLeft="30dp"
                    >

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="₹ 1000"
                    android:gravity="end"
                    android:textColor="#000000"
                    android:layout_marginEnd="10dp"

                    android:fontFamily="serif"
                    android:layout_marginLeft="30dp"
                    >

                </TextView>





            </RelativeLayout>





        </LinearLayout>




    </androidx.cardview.widget.CardView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Participate Now"
        android:textColor="#ffffff"
        android:id="@+id/upload_video"
        android:layout_marginTop="7dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center"
        android:background="#882A54"
        android:fontFamily="serif"
        />
</LinearLayout>