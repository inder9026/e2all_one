<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_record"
        android:layout_marginTop="0dp"
        android:padding="20dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="30dp"
             android:background="@color/green_500"
            app:cardBackgroundColor="#ffffff">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"

    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="10dp"
        android:src="@drawable/share"
        android:layout_marginTop="0dp"
        android:layout_height="10dp"
        android:layout_gravity="center">

    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:layout_width="30dp"
        android:text="Live"
        android:background="@drawable/button_bg"
        android:textSize="8sp"

        android:gravity="center"
        android:textColor="@color/white"

        android:layout_height="10dp">

    </TextView>
</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Demo Class-Physics(Concept of speed)"
                    android:textColor="#000000"
                    android:layout_height="wrap_content">

                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/ic_launcher"
                    />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/ic_launcher"
                        />

                </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.4"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Shivam Sir"
                                android:textColor="#000000"
                                android:textStyle="normal"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="10sp"
                                android:id="@+id/username"
                                android:layout_height="wrap_content">


                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Faculty"
                                android:textColor="@color/black_alpha_50"
                                android:textStyle="normal"
                                android:id="@+id/identity"
                                android:textSize="8dp"
                                android:layout_height="wrap_content">


                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.6"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Start In"
                                android:layout_gravity="end"
                                android:layout_marginRight="10dp"
                                android:textColor="@color/black_alpha_50"
                                android:textStyle="bold"
android:textSize="10sp"
                                android:layout_height="wrap_content">


                            </TextView>
                            <TextView
                                android:layout_gravity="end"
                                android:layout_width="wrap_content"
                                android:text="12:89:00"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="8sp"
                                android:id="@+id/timer"
                                android:layout_marginRight="10dp"
                                android:layout_height="wrap_content">


                            </TextView>

                        </LinearLayout>
                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:textSize="8dp"
                                android:text="Concept of speed,Speedometer,Uniform and non-uniform Motion"
                                android:layout_height="wrap_content">

                            </TextView>
                        </LinearLayout>
                </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/button_bg"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Physics Live Course"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:text="02:45-03:45 pm"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"

                        android:textSize="12dp"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:text="Langauge -"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="normal"
                        android:textSize="8sp"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:text="English"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="1dp"
                        android:textStyle="normal"
                        android:textSize="8sp"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/share"
                        android:layout_height="20dp"
                        android:gravity="center"
                        app:tint="#ffffff">

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:text="STUDENTS ENROLLED -"
                        android:textAllCaps="false"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="10sp"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:text="5492"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="1dp"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatSeekBar
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                </androidx.appcompat.widget.AppCompatSeekBar>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:weightSum="1"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_share">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="10dp"
                    android:text="Share with Friends"
                    android:textColor="@color/white"
                    android:layout_weight="0.9"

                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                </TextView>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="ENROLL NOW"
                    android:layout_weight="0.1"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_enroll"
                    >

                </Button>

            </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>